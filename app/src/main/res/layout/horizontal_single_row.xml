    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="175dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/round_backrough"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginRight="10dp">


            <ImageView
                android:id="@+id/image_view"
                android:layout_width="match_parent"
                android:layout_height="109dp"
                android:translationY="2dp"
                app:srcCompat="@mipmap/bookss" />

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="Sách kỹ năng"
                android:translationY="130dp" />

            <TextView
                android:id="@+id/published_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="Lượt xem 100  |  Đã mượn 100"
                android:textSize="11sp"
                android:translationY="150dp" />

            <TextView
                android:id="@+id/title"
                android:layout_width="147dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:includeFontPadding="true"
                android:paddingStart="-13dp"
                android:text="Kỹ thuật lập trình"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="16sp"
                android:translationY="110dp" />

            <TextView
                android:id="@+id/online2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/hot"
                android:paddingLeft="10dp"
                android:paddingTop="1dp"
                android:paddingRight="10dp"
                android:paddingBottom="2dp"
                android:text="Hot"
                android:textColor="#FFFFFF" />
        </RelativeLayout>
