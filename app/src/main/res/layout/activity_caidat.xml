    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cd_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="44dp"
        android:src="@drawable/avatar" />

    <TextView
        android:id="@+id/profile"
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="124dp"
        android:layout_marginTop="66dp"
        android:background="#FFFFFF"
        android:text="HaLinh"
        android:textColor="@color/blue_dam"
        android:textSize="20sp"
        android:textStyle="bold"></TextView>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="21dp"

        android:layout_below="@+id/profile"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="-16dp"
        android:background="@drawable/round_day" />

    <androidx.appcompat.widget.AppCompatButton

        android:id="@+id/btnDoiMatKhau"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignBottom="@id/view2"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="-133dp"
        android:background="@color/white"

        android:drawableStart="@mipmap/lock_foreground"
        android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
        android:paddingStart="0dp"
        android:paddingEnd="10dp"
        android:text="Đổi mật khẩu"
        android:textAlignment="viewStart"
        android:textAllCaps="false">

    </androidx.appcompat.widget.AppCompatButton>

    <androidx.appcompat.widget.AppCompatButton

        android:id="@+id/btnGioiThieu"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignBottom="@id/view2"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="-380dp"
        android:background="@color/white"

        android:drawableStart="@mipmap/note_foreground"
        android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
        android:paddingEnd="10dp"
        android:text="Giới thiệu"
        android:textAlignment="viewStart"
        android:textAllCaps="false">

    </androidx.appcompat.widget.AppCompatButton>

    <androidx.appcompat.widget.AppCompatButton

        android:id="@+id/button7"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignBottom="@id/view2"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="-580dp"
        android:background="#fff">

    </androidx.appcompat.widget.AppCompatButton>


    <androidx.appcompat.widget.AppCompatButton

        android:id="@+id/btnXoaTK"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignBottom="@id/view2"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="-232dp"
        android:background="@color/white"

        android:drawableStart="@mipmap/delete_foreground"
        android:paddingEnd="10dp"
        android:text="Hủy tài khoản"
        android:textAlignment="viewStart"
        android:textAllCaps="false">

    </androidx.appcompat.widget.AppCompatButton>

    <androidx.appcompat.widget.AppCompatButton

        android:id="@+id/button5"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignBottom="@id/view2"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="-182dp"
        android:background="@color/white"

        android:drawableStart="@mipmap/start2_foreground"
        android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
        android:paddingEnd="10dp"
        android:text="Đánh giá"
        android:textAlignment="viewStart"
        android:textAllCaps="false">

    </androidx.appcompat.widget.AppCompatButton>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/btnCaiDatNhacNho"
        android:layout_alignBottom="@+id/button7"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="285dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="251dp"
        app:cardBackgroundColor="@color/white">

        <RelativeLayout
            android:layout_width="395dp"
            android:layout_height="46dp">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@mipmap/bell_foreground" />

            <Switch
                android:id="@+id/switch3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="40dp"
                android:layout_marginLeft="350dp"
                android:layout_marginRight="10dp"
                android:layout_toEndOf="@+id/name7" />

            <TextView
                android:id="@+id/name7"
                android:layout_width="151dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="110dp"

                android:layout_marginTop="10dp"
                android:paddingStart="0dp"
                android:paddingLeft="100dp"
                android:paddingTop="0dp"
                android:text="Thông báo"
                android:textAlignment="viewStart"
                android:textColor="#020202"
                android:textSize="14sp"
                android:textStyle="normal" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatButton

        android:id="@+id/btnCaiDatNhacNho"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignBottom="@id/view2"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="-281dp"
        android:background="@color/white"

        android:drawableStart="@mipmap/time_foreground"
        android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
        android:paddingEnd="10dp"
        android:text="Cài đặt thời gian nhắc nhở"
        android:textAlignment="viewStart"
        android:textAllCaps="false">

    </androidx.appcompat.widget.AppCompatButton>

</RelativeLayout>