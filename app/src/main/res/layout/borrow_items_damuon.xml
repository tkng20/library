<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="340dp"
            android:layout_height="180dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:background="@drawable/shadow"
            android:backgroundTint="#ECE7F8">

            <TextView
                android:id="@+id/textView26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="199dp"
                android:layout_marginTop="100dp"
                android:fontFamily="@font/nunito_sans_bold"
                android:text="20/03/2022"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="199dp"
                android:layout_marginTop="75dp"
                android:fontFamily="@font/nunito_sans_bold"
                android:text="Ngày trả"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="152dp"
                android:layout_height="145dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/shadow"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageBook6"
                    android:layout_width="148dp"
                    android:layout_height="118dp"
                    app:srcCompat="@drawable/thuatdoctam" />

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="148dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_sans_bold"
                    android:includeFontPadding="true"
                    android:text="Thuật đọc tâm"
                    android:textAlignment="center"
                    android:textColor="#3E4685"
                    android:textSize="18sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView22"
                android:layout_width="41dp"
                android:layout_height="19dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/cn" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="200dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/nunito_sans_bold"
                android:text="Ngày mượn"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="200dp"
                android:layout_marginTop="45dp"
                android:fontFamily="@font/nunito_sans_bold"
                android:text="20/02/2022"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnMuon1"
                android:layout_width="117dp"
                android:layout_height="36dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="200dp"
                android:layout_marginTop="129dp"
                android:backgroundTint="#FF8C04"
                android:fontFamily="@font/nunito_sans_bold"
                android:gravity="center"
                android:text="Mượn lại"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="13sp" />

        </RelativeLayout>
    </LinearLayout>

