<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:textAlignment="gravity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <Switch
            android:id="@+id/switch1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:thumbTint="@drawable/switch_thumb"
            app:trackTint="@drawable/switch_track">
        </Switch>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="215dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/btdx" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <View
                android:id="@+id/viewheart"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/ic_heart" />

            <TableLayout
                android:id="@+id/tb2"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_below="@+id/tb1"
                android:paddingLeft="10dp"
                android:paddingTop="10dp">

                <TableRow>
                    <View
                        android:layout_margin="2dp"
                        android:id="@+id/view1"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="0dp"
                        android:background="@drawable/ic_cts_eye" />

                    <View
                        android:id="@+id/view2"
                        android:layout_margin="2dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="0dp"
                        android:background="@drawable/ic_cts_check" />

                    <View
                        android:id="@+id/view3"
                        android:layout_margin="2dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="0dp"
                        android:background="@drawable/ic_cts_heart" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:fontFamily="@font/nunito_sans_extralight"
                        android:layout_margin="2dp"
                        android:layout_gravity="center_horizontal"
                        android:text="1,126"
                        android:textColor="@color/black"
                        android:textSize="8sp" />

                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="2dp"
                        android:fontFamily="@font/nunito_sans_extralight"
                        android:layout_width="wrap_content"
                        android:text="38"
                        android:textColor="@color/black"
                        android:textSize="8sp" />

                    <TextView
                        android:layout_margin="2dp"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/nunito_sans_extralight"
                        android:text="312"
                        android:textColor="@color/black"
                        android:textSize="8sp" />
                </TableRow>
            </TableLayout>

            <TableLayout
                android:id="@+id/tb1"
                android:layout_width="163dp"
                android:layout_height="100dp"
                android:layout_below="@+id/viewheart"
                android:layout_marginTop="0dp"
                android:layout_marginRight="20dp"
                android:stretchColumns="*">

                <TableRow>

                    <TextView
                        android:id="@+id/tensach"
                        android:layout_span="2"
                        android:text="Bắt trẻ đồng xanh"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:fontFamily="@font/nunito_sans_bold"
                        android:text="Tác giả:"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tacgia"
                        android:fontFamily="@font/nunito_sans_extralight"
                        android:text="J.D. Salinger"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </TableRow>

                <TableRow>

                    <TextView

                        android:fontFamily="@font/nunito_sans_bold"
                        android:text="Thể loại:"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/theloai"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/nunito_sans_extralight"
                        android:text="Tiểu thuyết"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </TableRow>

                <TableRow>

                    <TextView

                        android:fontFamily="@font/nunito_sans_bold"
                        android:text="Số lượng:"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/soluong"
                        android:fontFamily="@font/nunito_sans_extralight"
                        android:text="20"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </TableRow>

                <TableRow>

                    <TextView

                        android:fontFamily="@font/nunito_sans_bold"
                        android:text="Số trang:"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/sotrang"
                        android:fontFamily="@font/nunito_sans_extralight"
                        android:text="274"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </TableRow>

                <TableRow>

                    <TextView

                        android:fontFamily="@font/nunito_sans_bold"
                        android:text="Ngày xuât bản:"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/ngayxb"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/nunito_sans_extralight"
                        android:text="21/8/2001"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </TableRow>

            </TableLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="274dp"
        android:layout_marginTop="10dp"
        android:justificationMode="inter_word"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_sans_bold"
            android:text="Tác giả"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_sans_extralight"
            android:justificationMode="inter_word"
            android:text="J.D. Salinger là một nhà văn người Mỹ, nổi tiếng với cuốn tiểu thuyết “Bắt trẻ đồng xanh” năm 1951. Trước khi ra mắt, Salinger đã xuất bản một số truyện ngắn trên tạp chí Story."
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/nunito_sans_bold"
            android:text="Tổng quan"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_sans_extralight"
            android:justificationMode="inter_word"
            android:text="“Bắt trẻ đồng xanh” là một tiểu thuyết của J.D Salinger, được xuất bản một phần dưới dạng nhiều kỳ vào năm 1945–1946 và là một tiểu thuyết vào năm 1951. Ban đầu nó được dành cho người lớn nhưng thường được thanh thiếu niên đọc vì chủ đề tức giận, xa lánh và như một bài phê bình ...... "
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp">

        <Button
            android:id="@+id/cts_muonSach"
            android:layout_width="268dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/round_bg_blue_square"
            android:fontFamily="@font/nunito"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:text="Mượn sách"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginRight="20dp"/>

        <Button
            android:id="@+id/cts_docOnline"
            android:layout_width="268dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/round_bg_red_square"
            android:fontFamily="@font/nunito"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:text="Đọc online"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>
</LinearLayout>